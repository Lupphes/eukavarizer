            cutesv_flag     = true
            fastqc_flag     = false
            multiqc_flag    = false

            // Example caller args
            sniffles_args   = "--min_support 3"
            cutesv_args     = "--max_cluster_bias_INS 100 --max_cluster_bias_DEL 100"
            delly_args      = ""
            tiddit_args     = ""

            // SURVIVOR Filtering parameters
