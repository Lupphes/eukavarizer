profiles {

    // --------------------------------------------------------------------------
    // SHORT READS
    // --------------------------------------------------------------------------
    short_quick {
        params {
            // Which callers are used?
            delly_flag      = true
            manta_flag      = false
            tiddit_flag     = false
            gridss_flag     = true
            sniffles_flag   = false
            cutesv_flag     = false
            fastqc_flag     = false
            multiqc_flag    = false

            // Example caller args (only define those you actually use):
            delly_args      = "--map-qual 20 --mad-cutoff 9 --maxreadsep 1000 --svtype ALL"
            gridss_args     = "--steps AssembleBreakends --workingdir /tmp"
            // For callers you don't run here, omit or keep empty
            tiddit_args     = ""
            sniffles_args   = ""
            cutesv_args     = ""

            // SURVIVOR Filtering parameters
            sur_min_sv_size               = 40
            sur_max_distance_breakpoints  = 500
            sur_min_supporting_callers    = 1
            sur_account_for_type          = 1
            sur_account_for_sv_strands    = 0
            sur_estimate_distanced_by_sv_size = 0
            sur_min_num_reads_filter      = 3
            sur_min_allele_freq_filter    = 0.01
            sur_min_sv_size_filter        = 50
            sur_max_sv_size_filter        = 100000
        }
    }

    short_medium {
        params {
            delly_flag      = true
            manta_flag      = false
            tiddit_flag     = true
            gridss_flag     = true
            sniffles_flag   = false
            cutesv_flag     = false
            fastqc_flag     = true
            multiqc_flag    = true

            // Example caller args
            delly_args    = "--map-qual 20 --mad-cutoff 12 --maxreadsep 2000 --svtype ALL"
            tiddit_args   = "--window_size 100"
            gridss_args   = "--steps AllSteps --workingdir /gridss_work"
            sniffles_args = ""

            // SURVIVOR Filtering parameters
            sur_min_sv_size               = 40
            sur_max_distance_breakpoints  = 1000
            sur_min_supporting_callers    = 1
            sur_account_for_type          = 1
            sur_account_for_sv_strands    = 0
            sur_estimate_distanced_by_sv_size = 0
            sur_min_num_reads_filter      = 3
            sur_min_allele_freq_filter    = 0.01
            sur_min_sv_size_filter        = 50
            sur_max_sv_size_filter        = 100000
        }
    }

    short_full {
        params {
            delly_flag      = true
            manta_flag      = true
            tiddit_flag     = true
            gridss_flag     = true
            sniffles_flag   = false
            cutesv_flag     = false
            fastqc_flag     = true
            multiqc_flag    = true

            // Example caller args
            delly_args     = "--map-qual 20 --mad-cutoff 15 --maxreadsep 3000 --svtype ALL"
            manta_args     = "--generateEvidenceBam"
            tiddit_args    = "--window_size 50"
            gridss_args    = "--jvmheap 16g --steps AssembleBreakends,AssembleBreakpoints --workingdir /gridss_work"
            sniffles_args  = ""

            // SURVIVOR Filtering parameters
            sur_min_sv_size               = 40
            sur_max_distance_breakpoints  = 1000
            sur_min_supporting_callers    = 1
            sur_account_for_type          = 1
