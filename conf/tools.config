    // --------------------------------------------------------------------------
    // QC toggles
    // --------------------------------------------------------------------------
    qc_on {
        params {
            fastqc_flag  = true
            multiqc_flag = true
        }
    }

    qc_off {
        params {
            fastqc_flag  = false
            multiqc_flag = false
        }
    }
